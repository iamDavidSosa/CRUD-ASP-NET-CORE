@{
    ViewData["Title"] = "Listado de Personas";
}

<div class="card shadow-sm">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Personas Registradas</h5>
        <a class="btn btn-primary btn-sm" asp-action="Crear">
            <i class="bi bi-plus-circle"></i> Nueva Persona
        </a>
    </div>
    <div class="card-body">
        <table class="table table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Apellido</th>
                    <th>Edad</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>1</td>
                    <td>Anderson</td>
                    <td>Sosa</td>
                    <td>28</td>
                    <td>
                        <a class="btn btn-sm btn-outline-secondary" href="#"><i class="bi bi-pencil"></i></a>
                        <a class="btn btn-sm btn-outline-danger" href="#"><i class="bi bi-trash"></i></a>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
