@{
    ViewData["Title"] = "Dashboard";
}

<div class="container-fluid">
    <!-- Tarjetas de resumen -->
    <div class="row g-3 mb-4">
        <div class="col-md-4">
            <div class="card shadow-sm border-0 text-white" style="background: linear-gradient(135deg, #0b5ed7, #0d6efd, #74b0ff);">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="card-title">Personas</h5>
                        <h3 class="card-text">128</h3>
                    </div>
                    <i class="bi bi-people-fill" style="font-size:2.5rem;"></i>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm border-0 text-white" style="background: linear-gradient(135deg, #0d6efd, #3d8bfd, #60a5fa);">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="card-title">Reportes</h5>
                        <h3 class="card-text">24</h3>
                    </div>
                    <i class="bi bi-file-earmark-bar-graph-fill" style="font-size:2.5rem;"></i>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm border-0 text-white" style="background: linear-gradient(135deg, #0a58ca, #0b5ed7, #3b82f6);">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="card-title">Usuarios activos</h5>
                        <h3 class="card-text">5</h3>
                    </div>
                    <i class="bi bi-person-check-fill" style="font-size:2.5rem;"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- Gráfico placeholder -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header">
                    <h5 class="mb-0">Actividad de Registro de Personas</h5>
                </div>
                <div class="card-body">
                    <canvas id="registroChart" height="80"></canvas>
                </div>
            </div>
        </div>
    </div>

    <!-- Accesos rápidos -->
    <div class="row g-3">
        <div class="col-md-4">
            <a href="/Personas/Crear" class="btn btn-primary w-100 py-3">
                <i class="bi bi-plus-circle me-2"></i> Agregar Persona
            </a>
        </div>
        <div class="col-md-4">
            <a href="/Personas/Index" class="btn btn-success w-100 py-3">
                <i class="bi bi-people me-2"></i> Ver Listado
            </a>
        </div>
        <div class="col-md-4">
            <a href="/Reportes/Index" class="btn btn-warning w-100 py-3 text-white">
                <i class="bi bi-file-earmark-arrow-down me-2"></i> Exportar Reportes
            </a>
        </div>
    </div>
</div>

<!-- Chart.js -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    const ctx = document.getElementById('registroChart').getContext('2d');
    const registroChart = new Chart(ctx, {
        type: 'line',
        data: {
            labels: ['Enero', 'Febrero', 'Marzo', 'Abril', 'Mayo', 'Junio'],
            datasets: [{
                label: 'Personas registradas',
                data: [12, 19, 14, 23, 18, 25],
                backgroundColor: 'rgba(13, 110, 253, 0.2)',
                borderColor: 'rgba(13, 110, 253, 1)',
                borderWidth: 2,
                tension: 0.3,
                fill: true,
            }]
        },
        options: {
            responsive: true,
            plugins: {
                legend: {
                    display: true,
                    position: 'top',
                }
            },
            scales: {
                y: {
                    beginAtZero: true
                }
            }
        }
    });
</script>

