@model CRUD_CORE.Models.Persona
@{
    ViewData["Title"] = "Registrar Persona";
}

<div class="container-fluid">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0"><i class="bi bi-person-plus-fill me-2"></i>Registrar Nueva Persona</h5>
        </div>
        <div class="card-body">
            <form asp-action="Crear" method="post">
                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="Cedula" class="form-label">Cédula</label>
                        <input asp-for="Cedula" class="form-control" required />
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Nombre" class="form-label">Nombre</label>
                        <input asp-for="Nombre" class="form-control" required />
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Apellido" class="form-label">Apellido</label>
                        <input asp-for="Apellido" class="form-control" />
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Telefono" class="form-label">Teléfono</label>
                        <input asp-for="Telefono" class="form-control" />
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Whatsapp" class="form-label">WhatsApp</label>
                        <input asp-for="Whatsapp" class="form-control" />
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Email" class="form-label">Email</label>
                        <input asp-for="Email" class="form-control" type="email" />
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Ciudad" class="form-label">Ciudad</label>
                        <input asp-for="Ciudad" class="form-control" />
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Sector" class="form-label">Sector</label>
                        <input asp-for="Sector" class="form-control" />
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Circ" class="form-label">Circ.</label>
                        <input asp-for="Circ" class="form-control" />
                    </div>
                </div>

                <div class="mt-4">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save me-1"></i> Guardar
                    </button>
                    <a asp-action="Index" class="btn btn-secondary ms-2">
                        <i class="bi bi-x-circle me-1"></i> Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

