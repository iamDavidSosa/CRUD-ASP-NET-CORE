@{
    ViewData["Title"] = "Configuración";
}

<div class="container-fluid">
    <div class="card shadow-sm">
        <div class="card-header bg-warning text-white">
            <h5 class="mb-0"><i class="bi bi-gear-fill me-2"></i>Configuración del Sistema</h5>
        </div>
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-6">
                    <div class="card border-0 shadow-sm p-3">
                        <h6><i class="bi bi-person-badge me-1"></i> Gestión de Usuarios</h6>
                        <p>Agregar, modificar o eliminar usuarios del sistema.</p>
                        <a href="/Usuarios/Index" class="btn btn-sm btn-primary">Administrar Usuarios</a>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card border-0 shadow-sm p-3">
                        <h6><i class="bi bi-people me-1"></i> Gestión de Personas</h6>
                        <p>Configurar opciones de registro y visualizar listado de personas.</p>
                        <a href="/Personas/Index" class="btn btn-sm btn-primary">Administrar Personas</a>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card border-0 shadow-sm p-3">
                        <h6><i class="bi bi-file-earmark-bar-graph me-1"></i> Reportes</h6>
                        <p>Configurar reportes y exportaciones.</p>
                        <a href="/Reportes/Index" class="btn btn-sm btn-primary">Ver Reportes</a>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card border-0 shadow-sm p-3">
                        <h6><i class="bi bi-sliders me-1"></i> Preferencias del Sistema</h6>
                        <p>Ajustar colores, gradientes y otras configuraciones visuales.</p>
                        <a href="#" class="btn btn-sm btn-primary">Configurar</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

