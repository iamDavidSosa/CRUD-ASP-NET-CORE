@model CRUD_CORE.Models.Usuario

@{
    ViewData["Title"] = "Registrar Usuario";
}

<div class="container-fluid">
    <div class="card shadow-sm">
        <div class="card-header bg-success text-white">
            <h5 class="mb-0"><i class="bi bi-person-badge-fill me-2"></i>Registrar Usuario</h5>
        </div>
        <div class="card-body">
            <form asp-action="Crear" method="post" enctype="multipart/form-data">
                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="nombre" class="form-label">Nombre</label>
                        <input asp-for="nombre" class="form-control" required />
                    </div>
                    <div class="col-md-6">
                        <label asp-for="usuario" class="form-label">Usuario</label>
                        <input asp-for="usuario" class="form-control" required />
                    </div>
                    <div class="col-md-6">
                        <label asp-for="clave" class="form-label">Clave</label>
                        <input asp-for="clave" class="form-control" type="password" required />
                    </div>
                    <div class="col-md-6">
                        <label asp-for="correo" class="form-label">Correo</label>
                        <input asp-for="correo" class="form-control" type="email" required />
                    </div>
                    <div class="col-md-6">
                        <label asp-for="id_rol" class="form-label">Rol</label>
                        <select asp-for="id_rol" class="form-select">
                            <option value="1">Administrador</option>
                            <option value="2">Usuario</option>
                        </select>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="url_foto_perfil" class="form-label">Foto de Perfil</label>
                        <input asp-for="url_foto_perfil" class="form-control" type="file" />
                    </div>
                </div>

                <div class="mt-4">
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-save me-1"></i> Guardar
                    </button>
                    <a asp-action="Index" class="btn btn-secondary ms-2">
                        <i class="bi bi-x-circle me-1"></i> Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
